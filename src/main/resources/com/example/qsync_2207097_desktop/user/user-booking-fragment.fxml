<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ChoiceBox?>
<VBox spacing="8" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.user.UserBookingFragmentController">
    <children>
        <Label text="Book Appointment" styleClass="h2" />
        <Label text="Department" />
        <ComboBox fx:id="departmentCombo" promptText="Select department" />
        <Label text="Doctor" />
        <ComboBox fx:id="doctorCombo" promptText="Select doctor" />
        <Label text="Date" />
        <DatePicker fx:id="datePicker" />
        <Label text="Priority" />
        <ChoiceBox fx:id="priorityCombo" />
        <Label text="Symptoms" />
        <TextArea fx:id="symptomsField" promptText="Describe your symptoms" prefRowCount="4" />
        <Button text="Check and Book" onAction="#onBook" fx:id="btnBook" />
    </children>
</VBox>
