<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.user.UserHomeFragmentController">
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox spacing="24" styleClass="content-padding">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox spacing="4">
                    <Label fx:id="welcomeLabelFragment" styleClass="h1" text="Welcome back" />
                    <Label fx:id="emailLabelFragment" styleClass="muted" text="user@example.com" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnRefresh" styleClass="btn-secondary" text="Refresh" />
                <Button fx:id="btnBook" styleClass="btn-primary" text="Book Appointment" />
            </HBox>

            <VBox spacing="16">
                <Label styleClass="h2" text="Today's Appointments" />
                <FlowPane fx:id="todayCardsContainer" hgap="20" vgap="20" />
            </VBox>

            <VBox spacing="16" VBox.vgrow="ALWAYS">
                <Label styleClass="h2" text="Upcoming Appointments" />
                <TableView fx:id="appointmentsTable" prefHeight="400" styleClass="modern-table">
                    <columns>
                        <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                        <TableColumn fx:id="colDoctor" prefWidth="180" text="Doctor" />
                        <TableColumn fx:id="colToken" prefWidth="80" text="Token" />
                        <TableColumn fx:id="colStatus" prefWidth="120" text="Status" />
                        <TableColumn fx:id="colPriority" prefWidth="100" text="Priority" />
                        <TableColumn fx:id="colActions" prefWidth="100" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox fx:id="undoContainer" visible="false" managed="false" alignment="CENTER_LEFT" spacing="15" maxWidth="350" maxHeight="50" style="-fx-background-color: #323232; -fx-background-radius: 4; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 0);" StackPane.alignment="BOTTOM_CENTER" translateY="-30">
        <Label text="Appointment cancelled" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="UNDO" style="-fx-background-color: transparent; -fx-text-fill: #4da6ff; -fx-font-weight: bold; -fx-cursor: hand;" onAction="#onUndo" />
        <Button text="âœ•" style="-fx-background-color: transparent; -fx-text-fill: #aaaaaa; -fx-cursor: hand;" onAction="#closeUndo" />
    </HBox>
</StackPane>
