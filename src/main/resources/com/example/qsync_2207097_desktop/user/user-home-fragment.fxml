<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.user.UserHomeFragmentController" spacing="12" stylesheets="@../admin/admin.css">
    <children>
        <HBox spacing="10" styleClass="header" VBox.vgrow="NEVER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <VBox spacing="4">
                    <Label fx:id="welcomeLabelFragment" styleClass="title" text="Welcome" />
                    <Label fx:id="emailLabelFragment" styleClass="muted" text="(email)" />
                </VBox>
                <HBox HBox.hgrow="ALWAYS" />
                <HBox spacing="8">
                    <Button fx:id="btnRefresh" text="Refresh" />
                    <Button fx:id="btnBook" text="Book Appointment" />
                    <Button text="Sign out" onAction="#onSignOut" />
                </HBox>
            </children>
        </HBox>

        <TableView fx:id="appointmentsTable" prefHeight="360" prefWidth="800" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDate" text="Date" prefWidth="120" />
                <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="200" />
                <TableColumn fx:id="colToken" text="Token" prefWidth="80" />
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120" />
                <TableColumn fx:id="colNotes" text="Notes" prefWidth="220" />
                <TableColumn fx:id="colActions" text="Actions" prefWidth="80" />
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets top="12" right="12" bottom="12" left="12" />
    </padding>
</VBox>
