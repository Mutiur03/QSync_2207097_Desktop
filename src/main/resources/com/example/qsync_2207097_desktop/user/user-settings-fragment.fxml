<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Region?>

<ScrollPane fx:id="settingsScroll" fitToWidth="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.user.UserSettingsFragmentController">
    <StackPane fx:id="centerStack">
        <VBox spacing="30" styleClass="content-padding">
            <VBox spacing="8">
                <Label styleClass="h1" text="Settings" />
                <Label styleClass="muted" text="Manage your profile and security settings" />
            </VBox>

            <VBox spacing="20" styleClass="appointment-card" style="-fx-cursor: default;">
                <Label styleClass="h3" text="Profile Information" />
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label styleClass="form-label" text="Full name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nameField" promptText="Your full name" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label styleClass="form-label" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="emailField" promptText="you@example.com" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label styleClass="form-label" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="phoneField" promptText="Optional phone" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label styleClass="form-label" text="Date of birth:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <DatePicker fx:id="dobPicker" maxWidth="Infinity" promptText="YYYY-MM-DD" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label styleClass="form-label" text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <ChoiceBox fx:id="genderChoiceBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                </GridPane>
                
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label fx:id="profileMessageLabel" styleClass="muted" />
                    <Button fx:id="saveProfileButton" onAction="#onSaveProfile" styleClass="btn-primary" text="Save Profile" />
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="appointment-card" style="-fx-cursor: default;">
                <Label styleClass="h3" text="Change Password" />
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label styleClass="form-label" text="Current password:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <PasswordField fx:id="currentPasswordField" promptText="Current password" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label styleClass="form-label" text="New password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <PasswordField fx:id="newPasswordField" promptText="New password" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label styleClass="form-label" text="Confirm new:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </GridPane>
                
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label fx:id="passwordMessageLabel" styleClass="muted" />
                    <Button fx:id="changePasswordButton" onAction="#onChangePassword" styleClass="btn-primary" text="Update Password" />
                </HBox>
            </VBox>
        </VBox>
    </StackPane>
</ScrollPane>
