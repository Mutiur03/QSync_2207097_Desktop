<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" stylesheets="@log-reg.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.AdminController" styleClass="root">
    <top>
        <HBox alignment="TOP_RIGHT" spacing="8" styleClass="header">
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="6" VBox.vgrow="ALWAYS" BorderPane.alignment="CENTER" styleClass="login-container">
            <VBox alignment="CENTER" spacing="10" styleClass="card">
                <Label styleClass="title" text="Admin Sign in" />

                <GridPane alignment="CENTER" hgap="8" vgap="8" maxWidth="360" styleClass="login-grid">
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="adminEmail" styleClass="input" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <PasswordField fx:id="adminPassword" styleClass="input" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>

                <Button onAction="#adminSignIn" styleClass="login-btn" text="Sign in" />

                <Label styleClass="muted" text="Use admin@example.com / admin123" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
