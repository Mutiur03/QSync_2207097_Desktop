<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.admin.AdminQueuesFragmentController" >
    <VBox spacing="20" styleClass="content-padding">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label styleClass="h1" text="Live Patient Queues" />
                <Label styleClass="muted" text="Monitor real-time patient status by department and doctor for today." />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#refreshQueues" styleClass="btn-secondary" text="Refresh">
                    <graphic>
                        <Label style="-fx-font-size: 14px;" text="↻" />
                    </graphic>
                </Button>
            </HBox>
        </HBox>

        <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="stats-card" style="-fx-background-color: white; -fx-background-radius: 12;">
            <TreeView fx:id="queuesTreeView" showRoot="false" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
        </VBox>
    </VBox>

    <HBox fx:id="undoContainer" alignment="CENTER_LEFT" spacing="15" visible="false" maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="BOTTOM_CENTER" style="-fx-background-color: #1e293b; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 4);">
        <Label text="Appointment cancelled" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
        <Button text="Undo" onAction="#undoCancel" style="-fx-background-color: transparent; -fx-text-fill: #38bdf8; -fx-font-weight: bold; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 0;" />
        <Button text="✕" onAction="#closeUndo" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-font-size: 14px; -fx-padding: 0 0 0 10; -fx-cursor: hand;" />
    </HBox>
</StackPane>
