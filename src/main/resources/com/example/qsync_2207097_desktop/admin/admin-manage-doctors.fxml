<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="20" styleClass="content-padding" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.admin.AdminManageDoctorsController">
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label styleClass="h1" text="Doctors Management" />
            <Label styleClass="muted" text="Manage hospital departments and staff members." />
        </VBox>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label styleClass="form-label" text="Filter by Department:" />
            <ComboBox fx:id="cmbDepartments" prefWidth="200" styleClass="text-field" />
            <Button fx:id="btnAdd" onAction="#onAddClicked" styleClass="btn-primary" text="+ Add New Doctor" />
        </HBox>
    </HBox>

    <TableView fx:id="doctorsTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="150" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="180" text="Email" />
            <TableColumn fx:id="colPhone" prefWidth="120" text="Phone" />
            <TableColumn fx:id="colSpecialty" prefWidth="120" text="Specialty" />
            <TableColumn fx:id="colStartTime" prefWidth="100" text="Start Time" />
            <TableColumn fx:id="colVgTime" prefWidth="100" text="Avg Time (m)" />
            <TableColumn fx:id="colYears" prefWidth="80" text="Exp (yrs)" />
            <TableColumn fx:id="colActions" prefWidth="160" text="Actions" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>


