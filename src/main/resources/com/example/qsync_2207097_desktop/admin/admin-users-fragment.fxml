<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="20" styleClass="content-padding" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qsync_2207097_desktop.admin.AdminUsersFragmentController">
    <VBox spacing="5">
        <Label styleClass="h1" text="Users Management" />
        <Label styleClass="muted" text="View and manage all registered users in the system." />
    </VBox>

    <TableView fx:id="usersTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="150" text="Full Name" />
            <TableColumn fx:id="colEmail" prefWidth="200" text="Email Address" />
            <TableColumn fx:id="colPhone" prefWidth="120" text="Phone Number" />
            <TableColumn fx:id="colGender" prefWidth="80" text="Gender" />
            <TableColumn fx:id="colDob" prefWidth="100" text="Date of Birth" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>

